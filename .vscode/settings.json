{
  "cSpell.language": "en,lorem",
  "cSpell.dictionaries": ["en", "lorem", "lorem-ipsum"],
  "cSpell.enableFiletypes": ["editorconfig"],
  "stylelint.packageManager": "pnpm",
  "stylelint.validate": ["css", "less", "postcss", "javascript", "typescript"],
  "css.lint.unknownAtRules": "ignore",
  "cssVariables.lookupFiles": ["packages/tokens/dist/themes/light.css"],
  "eslint.workingDirectories": [
    "packages/_private/eslint-config-syn",
    "packages/_private/release-utils",
    "packages/_private/react-demo",
    "packages/_private/vanilla-demo",
    "packages/_private/stylelint-config-syn",
    "packages/_private/e2e-demo-test",
    "packages/_private/demo-utilities",
    "packages/assets",
    "packages/components",
    "packages/docs",
    "packages/fonts",
    "packages/mcp",
    "packages/angular",
    "packages/react",
    "packages/tokens",
    "packages/vue"
  ],
  "files.readonlyInclude": {
    "packages/angular/components/**": true,
    "packages/angular/directives/**": true,
    "packages/angular/index.ts": true,
    "packages/angular/modules/**": true,
    "packages/react/src/**": true,
    "packages/tokens/test/*.css": true
  },
  "html.customData": ["packages/components/dist/vscode.html-custom-data.json"]
}
