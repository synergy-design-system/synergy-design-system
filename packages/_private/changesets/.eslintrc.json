{
  "ignorePatterns": ["node_modules/"],
  "extends": ["@synergy-design-system/eslint-config-syn/ts"],
  "root": true,
  "rules": {
    "max-len": ["error", { "code": 150 }]
  },
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".ts", ".js"],
        "moduleDirectory": ["node_modules", "src"]
      },
      "typescript": {
        "extensions": [".ts", ".js"],
        "moduleDirectory": ["node_modules", "src"]
      }
    }
  }
}
