{
  "name": "@synergy-design-system/demo-vue",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "pnpm run dev",
    "dev": "vite",
    "preview": "vite preview",
    "_build": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.app.json --composite false",
    "lint:html": "html-validate index.html",
    "lint:js": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "lint": "pnpm run /^lint:.*/",
    "format.eslint": "pnpm lint:js --fix",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "@synergy-design-system/assets": "workspace:*",
    "@synergy-design-system/components": "workspace:*",
    "@synergy-design-system/demo-utilities": "workspace:^",
    "@synergy-design-system/styles": "workspace:*",
    "@synergy-design-system/tokens": "workspace:*",
    "@synergy-design-system/vue": "workspace:*",
    "vue": "^3.5.22",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.12.0",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.18.8",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^8.57.1",
    "eslint-plugin-vue": "^9.33.0",
    "html-validate": "^9.7.1",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "vite": "^6.3.6",
    "vite-plugin-static-copy": "^3.1.3",
    "vue-tsc": "^2.2.12"
  },
  "type": "module"
}
