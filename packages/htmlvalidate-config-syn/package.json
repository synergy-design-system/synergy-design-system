{
  "author": {
    "name": "SICK Global UX Foundation",
    "url": "https://www.sick.com"
  },
  "description": "HTML-Validate core rules used in the Synergy Design System",
  "exports": {
    ".": {
      "default": "./.htmlvalidate.js"
    },
    "./scripts/createElements.js": {
      "default": "./scripts/createElements.js"
    }
  },
  "files": [
    ".htmlvalidate.js",
    "scripts"
  ],
  "homepage": "https://github.com/synergy-design-system/synergy-design-system/tree/main/packages/_internal/htmlvalidate-config-syn",
  "keywords": [
    "html validate",
    "SDS",
    "Synergy Design System",
    "SICK",
    "SICK Design System"
  ],
  "license": "MIT",
  "name": "@synergy-design-system/html-validate-config-syn",
  "repository": {
    "type": "git",
    "url": "https://github.com/synergy-design-system/synergy-design-system.git",
    "directory": "packages/htmlvalidate-config-syn"
  },
  "scripts": {
    "lint:html": "html-validate .",
    "lint:js": "eslint .",
    "lint": "pnpm run /^lint:.*/"
  },
  "type": "module",
  "version": "0.1.0",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@synergy-design-system/eslint-config-syn": "workspace:*",
    "@synergy-design-system/components": "workspace:*",
    "@types/node": "20",
    "eslint": "^8.57.1",
    "html-validate": "^9.2.1"
  },
  "peerDependencies": {
    "html-validate": "^9.2.1",
    "@synergy-design-system/components": "workspace:*"
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      [
        "@semantic-release/git",
        {
          "message": "chore(release/htmlvalidate): ${nextRelease.version} [skip actions]\n\n${nextRelease.notes}",
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ]
        }
      ],
      [
        "@semantic-release/github",
        {
          "successComment": false
        }
      ]
    ]
  }
}
